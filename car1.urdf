<robot name="simple_car">

  <!-- 🔹 차체 -->
  <link name="chassis">
    <inertial>
      <mass value="5"/>
      <inertia ixx="1" iyy="1" izz="1" ixy="0" ixz="0" iyz="0"/>
    </inertial>
    <visual>
      <geometry>
        <box size="1 0.5 0.2"/>
      </geometry>
      <origin xyz="0 0 0.3"/>
    </visual>
    <collision>
      <geometry>
        <box size="1 0.5 0.2"/>
      </geometry>
      <origin xyz="0 0 0.3"/>
    </collision>
  </link>

  <!-- 🔹 앞왼쪽 바퀴 -->
  <link name="wheel_fl">
    <inertial>
      <mass value="1"/>
      <inertia ixx="0.01" iyy="0.01" izz="0.01" ixy="0" ixz="0" iyz="0"/>
    </inertial>
    <visual>
      <geometry>
        <cylinder length="0.05" radius="0.1"/>
      </geometry>
      <origin xyz="0.5 0.3 0.1" rpy="1.57 0 0"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.05" radius="0.1"/>
      </geometry>
      <origin xyz="0.5 0.3 0.1" rpy="1.57 0 0"/>
    </collision>
  </link>

  <!-- 🔹 앞오른쪽 바퀴 -->
  <link name="wheel_fr">
    <inertial>
      <mass value="1"/>
      <inertia ixx="0.01" iyy="0.01" izz="0.01" ixy="0" ixz="0" iyz="0"/>
    </inertial>
    <visual>
      <geometry>
        <cylinder length="0.05" radius="0.1"/>
      </geometry>
      <origin xyz="0.5 -0.3 0.1" rpy="1.57 0 0"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.05" radius="0.1"/>
      </geometry>
      <origin xyz="0.5 -0.3 0.1" rpy="1.57 0 0"/>
    </collision>
  </link>

  <!-- 🔹 뒤왼쪽 바퀴 -->
  <link name="wheel_rl">
    <inertial>
      <mass value="1"/>
      <inertia ixx="0.01" iyy="0.01" izz="0.01" ixy="0" ixz="0" iyz="0"/>
    </inertial>
    <visual>
      <geometry>
        <cylinder length="0.05" radius="0.1"/>
      </geometry>
      <origin xyz="-0.5 0.3 0.1" rpy="1.57 0 0"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.05" radius="0.1"/>
      </geometry>
      <origin xyz="-0.5 0.3 0.1" rpy="1.57 0 0"/>
    </collision>
  </link>

  <!-- 🔹 뒤오른쪽 바퀴 -->
  <link name="wheel_rr">
    <inertial>
      <mass value="1"/>
      <inertia ixx="0.01" iyy="0.01" izz="0.01" ixy="0" ixz="0" iyz="0"/>
    </inertial>
    <visual>
      <geometry>
        <cylinder length="0.05" radius="0.1"/>
      </geometry>
      <origin xyz="-0.5 -0.3 0.1" rpy="1.57 0 0"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.05" radius="0.1"/>
      </geometry>
      <origin xyz="-0.5 -0.3 0.1" rpy="1.57 0 0"/>
    </collision>
  </link>

  <!-- 🔹 조인트들 -->
  <joint name="joint_fl" type="continuous">
    <parent link="chassis"/>
    <child link="wheel_fl"/>
    <origin xyz="0.5 0.3 0.1"/>
    <axis xyz="0 0 1"/>
    <limit effort="10" velocity="10"/>
  </joint>

  <joint name="joint_fr" type="continuous">
    <parent link="chassis"/>
    <child link="wheel_fr"/>
    <origin xyz="0.5 -0.3 0.1"/>
    <axis xyz="0 0 1"/>
    <limit effort="10" velocity="10"/>
  </joint>

  <joint name="joint_rl" type="continuous">
    <parent link="chassis"/>
    <child link="wheel_rl"/>
    <origin xyz="-0.5 0.3 0.1"/>
    <axis xyz="0 0 1"/>
    <limit effort="10" velocity="10"/>
  </joint>

  <joint name="joint_rr" type="continuous">
    <parent link="chassis"/>
    <child link="wheel_rr"/>
    <origin xyz="-0.5 -0.3 0.1"/>
    <axis xyz="0 0 1"/>
    <limit effort="10" velocity="10"/>
  </joint>

</robot>

